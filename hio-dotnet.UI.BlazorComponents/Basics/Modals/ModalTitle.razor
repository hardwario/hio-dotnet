<div class="modal-header">
    <h5 class="modal-title">@ChildContent</h5>
    <button type="button" class="btn-close" aria-label="Close" @onclick="(async () => await OnClose.InvokeAsync())"></button>
</div>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
}
